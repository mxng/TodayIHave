<h1>Today I have</h1>
<h2>Today</h2>

<% @posts.each do |post| %>
  <% if post.created_at.strftime('%x') == Time.now.strftime('%x') %>
    <%= render partial: 'posts', locals: {post: post} %>
  <% end %>
<% end %>

<h2>Yesterday</h2>

<% @posts.each do |post| %>
  <% if post.created_at.strftime('%x') == Date.yesterday.strftime('%x') %>
    <%= render partial: 'posts', locals: {post: post} %>
  <% end %>
<% end %>

